.title-container{
  display: flex;
  justify-content:flex-start;
}
.name,.phone,.wechat{
  display: flex;
  align-items: center;
}
.card{
  margin:12px 24rpx;
  padding: 20rpx 20rpx 20rpx 20rpx;
  background: #fff;
  box-shadow: 2px 3px 2px #ccc;
}
.title{
  font-size: 16px;
  color: #33A9DB;
  display: block;
  font-weight: bold;
}
.team-member{
  border-left: 4px solid #F9CE1D;
  display: flex;
  justify-content: space-between;
}
.team-member-container{
  padding-bottom: 12px;
  
}
.business-card .phone{
  margin-left: 32px;
  line-height: 28px;
}
.business-card .wechat{
  margin-left: 32px;
  line-height: 28px;
}
